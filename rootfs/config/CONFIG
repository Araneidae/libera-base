# Definitions for Libera rootfs.

CONSOLE_BAUD = 115200
CONSOLE_TTY = ttyS0

ROOT_PASSWORD = Jungle

SSH_AUTHORIZED_KEYS = $(configdir)/authorized_keys

CFLAGS = -O2 -mthumb
CFLAGS_dropbear = -O2

TERMS = xterm xterm-color screen vt100 vt102


# This one is essential, nothing builds without it.
EXTRAS += busybox
# Components required for normal operation.
EXTRAS += ntp dropbear portmap
# Useful debugging tools
EXTRAS += strace lsof


# Temporary and dirty module hack.
LIB_MODULES = $(sysroot)/lib/modules/2.6.20.14

final-install::
        # Install the regular nfs mounts.
	mkdir -p $(patsubst %,$(sysroot)/mnt/%,nfs prod work)
	cat $(configdir)/fstab >>$(sysroot)/etc/fstab

        # Temporary hacks
	mkdir -p $(LIB_MODULES)
	cp $(LIBERA_BASE)/libera/libera.ko $(LIBERA_BASE)/msp430/msp.ko \
            $(LIB_MODULES)
	echo /lib/modules/2.6.20.14/libera.ko: >>$(LIB_MODULES)/modules.dep
	echo /lib/modules/2.6.20.14/msp.ko: >>$(LIB_MODULES)/modules.dep

	$(install-files) $(TOP)/libera/file-list
	$(startup) $(TOP)/libera/make-libera-dev S250


ifdef DEVELOPMENT
include $(configdir)/DEVELOPMENT
endif
